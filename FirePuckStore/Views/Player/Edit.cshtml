@model FirePuckStore.Models.Player

@{
    ViewBag.Title = "Edit Player";
}

<header>
    <p class="inlineDisplay">Here you can edit created player. You can change any field and image as well!</p>
</header>

@using (Html.BeginForm("Edit", "Player", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Card</legend>

        @Html.HiddenFor(model => model.PlayerId)

         @Html.Partial("_ImageUploader", Model.ImageUrl)

        <div class="editor-label">
            @Html.LabelFor(model => model.LeagueId, "League")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.LeagueId, (IEnumerable<SelectListItem>)ViewBag.LeagueIdList, String.Empty)
            @Html.ValidationMessageFor(model => model.LeagueId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.FullName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FullName)
            @Html.ValidationMessageFor(model => model.FullName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <button>Save</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Scripts/ui.selectmenu.js" type="text/javascript"></script>
    <script src="/Scripts/ui.imageselector.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('button').button();
            $('select').selectmenu();
        })
    </script>
}
